<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout 
        android:id="@+id/llay_options"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_form_title"
            android:textColor="@color/form_title_color"
            android:layout_gravity="center_vertical"/>
        <View 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView 
            android:id="@+id/tv_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_camera"
            android:textSize="@dimen/ts_normal"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rlay_choose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_gravity="end|center_vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/ts_normal"
                android:background="@drawable/ic_image_select"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_form_divider"/>
    
	<hzst.android.view.viewdata.GridViewForScrollView
        android:id="@+id/gv_accessory"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"/>
	
</LinearLayout>
