<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlay_content">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/size_form_arrow"
        android:layout_height="@dimen/size_form_arrow"
        android:background="@drawable/ic_form_arrow"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <EditText
        android:layout_toLeftOf="@id/iv_arrow"
        android:id="@+id/et_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0.1dp"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:enabled="false"
        android:layout_alignParentRight="true"/>

    <EditText
        android:layout_toLeftOf="@id/et_unit"
        android:id="@+id/et_fm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:textSize="16sp"
        android:textColor="@color/text_gray3"
        android:background="@color/bg_white"
        android:textColorHint="@color/text_hint"
        android:layout_alignParentLeft="true"
        android:clickable="true"/>


</RelativeLayout>