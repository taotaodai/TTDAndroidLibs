<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <hzst.android.view.MyDateView 
            android:id="@+id/mdv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--<Spinner -->
            <!--android:id="@+id/sp_start"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->
        
        <TextView 
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textSize="@dimen/ts_normal"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <hzst.android.view.MyDateView 
            android:id="@+id/mdv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--<Spinner -->
            <!--android:id="@+id/sp_end"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/llay_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView 
            android:id="@+id/tv_day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:textSize="@dimen/ts_normal"
            android:layout_gravity="center_vertical"/>
        <EditText 
            android:id="@+id/et_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:maxLength="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="numberDecimal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/ts_normal"/>
        <TextView 
            android:id="@+id/tv_day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textSize="@dimen/ts_normal"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>
